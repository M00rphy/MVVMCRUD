<Window x:Class="UsersCRUD.UserControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="UserControl" Height="450" Width="800">

    <Grid>
        <!-- Bind DataGrid to the Users collection in ViewModel -->
        <DataGrid ItemsSource="{Binding Users}" Margin="0,180,0,0" SelectedItem="{Binding SelectedUser}"/>

        <TextBox Text="{Binding SelectedUser.Name}" Margin="28,49,652,355" Width="120" Height="30"/>
        <TextBox Text="{Binding SelectedUser.LastName}" Margin="28,100,652,304" Width="120" Height="30"/>
        <TextBox Text="{Binding SelectedUser.Email}" Margin="515,49,165,355" Width="120" Height="30"/>
        <TextBox Text="{Binding SelectedUser.Password}" Margin="515,100,165,304" Width="120" Height="30"/>

        <Button Content="Save" HorizontalAlignment="Left" Margin="742,90,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
