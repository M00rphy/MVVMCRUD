<Window x:Class="UsersCRUD.test1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hx="http://helix-toolkit.org/wpf"
        xmlns:hxsharp="http://helix-toolkit.org/wpfsharpdx"
        mc:Ignorable="d"
        Title="3D Viewer" Height="450" Width="800">

    <Grid>
        <hxsharp:HelixViewport3DX Name="helixViewport" Background="White">
            <!-- Lighting -->
            <hxsharp:DirectionalLight3D Direction="-1,-1,-1" Color="White" />
            <hxsharp:AmbientLight3D Color="Gray" />

            <!-- Placeholder for 3D Model -->
            <hxsharp:GroupModel3D x:Name="ModelContainer" />
        </hxsharp:HelixViewport3DX>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <Button Content="Load Model" Click="LoadModel_Click" />
            <Button Content="Rotate Camera" Click="RotateCamera_Click" />
        </StackPanel>
    </Grid>
</Window>


